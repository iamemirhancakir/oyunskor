<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".taskagitmakas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_oyuncu"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tas"/>

        <ImageView
            android:id="@+id/iv_bilgisayar"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_oyuncu_puan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oyuncu:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_bilgisayar_puan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bilgisayar:"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="TAŞ"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_kagit"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="KAĞIT"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_makas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="MAKAS"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
